{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "security-layer/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "google-baseline",
    "**/*.spec.ts"
  ]
}
